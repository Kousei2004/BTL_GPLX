<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="20dp"
    android:background="#64B5F6"
    android:layout_height="180dp">

    <!-- CardView chứa ImageView -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="0dp"
        android:backgroundTint="#64B5F6">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_banner_index" />
    </androidx.cardview.widget.CardView>

    <!-- TextView nằm bên phải của ImageView -->
    <TextView
        android:id="@+id/tv_slogan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" GPLX A1"
        android:textColor="#78909C"
        android:textSize="30sp"
        app:fontFamily="@font/aclonica_regular"
        android:layout_marginStart="10dp" /> <!-- Khoảng cách giữa ImageView và TextView -->

</LinearLayout>
