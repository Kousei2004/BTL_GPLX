<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Activity.Bai_Thi_Thuc_Hanh">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:id="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:gravity="start|center_vertical"
                android:drawableLeft="@drawable/button_back"
                android:drawablePadding="20dp"
                android:paddingStart="16dp"
                android:text="Bài Thi Thực Hành Lái Xe"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner_select_chapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:drawableStart="@drawable/baseline_manage_search_24"
                android:background="@drawable/blue_blox" />

            <!-- ImageView trước phần I -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. BÀI THI THỰC HÀNH SỐ 1"
                android:id="@+id/text_section1"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:contentDescription="Image I"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/textViewI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_blox"
                android:padding="16dp"
                android:text=""/>

            <!-- ImageView trước phần II -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. BÀI THI THỰC HÀNH SỐ 2"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:id="@+id/text_section2"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Image II"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_201"/>

            <TextView
                android:id="@+id/textViewII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:background="@drawable/blue_blox"
                android:text=""/>

            <!-- ImageView trước phần III -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. BÀI THI THỰC HÀNH SỐ 3"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:id="@+id/text_section3"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewIII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Image III"
                android:layout_marginTop="10dp"

                android:src="@drawable/img_202"/>

            <TextView
                android:id="@+id/textViewIII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_blox"
                android:padding="16dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. BÀI THI THỰC HÀNH SỐ 4"
                android:textSize="18sp"
                android:id="@+id/text_section4"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="Image IV"
                android:src="@drawable/img_204"/>

            <TextView
                android:id="@+id/textViewIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_blox"
                android:padding="16dp"
                android:text=""/>

            <Button
                android:id="@+id/button_back_to_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="QUAY LẠI ĐẦU TRANG"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="18sp"
                android:background="@drawable/bg_btn_blue_corner_16"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/button_back"

                />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
